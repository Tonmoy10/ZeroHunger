
@{
    ViewBag.Title = "Login";
}
<br />
<a href="/Main/Home">
    <button style="float:right" class="btn-warning col-lg-1">Add User</button>
</a>

<h2>Login</h2>

<form action="" method="post" >
    <input type="text" name="email" class="form-control" placeholder="Email Address" /><br /> <br />
    <input type="password" name="password" class="form-control" placeholder="Password" /><br /> <br />
    <label for="Type">Account Type</label>
    <select name="Type">
        <option value="Admin">Admin</option>
        <option value="Employee">Employee</option>
        <option value="Restaurant">Restaurant</option>
    </select><br><br>
    <input type="submit" name="submit" value="Login" />
</form>

